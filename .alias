# General stuff
alias ls="ls -lFG"
alias dir="ls"
alias du="du -h"
alias more=less
alias via="vi ~/.alias"

# Make new dir and cd into it
function mkd () { mkdir "$1" && cd "$1"; }


# Make cm, mv and rm require confirmation.
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

alias su="sudo"

# For git
alias gcm="git commit -m"
alias gc="git commit"
alias gp="git push"
alias gpgm="git push github master"
alias gphm="git push heroku master"
alias gs="git status"
alias gaa="git add -A"
alias ga="git add"
alias gb="git branch"
alias gco="git checkout"
alias gd="git diff"
alias gl="git log"
alias grH="git reset HEAD"

# Make `g` behave like `git status` with no args, or `git` with args
g () {
  if [ $# -eq 0 ]
  then
    git status
  else
    git "$@"
  fi
}
#__git_complete g _git

# For npm
function npmreset () { rm -rf node_modules/ && npm install; }

# For bundle
alias bi="bundle install"
alias be="bundle exec"
alias ber="bundle exec rspec"

# For rails
alias rgm="rails g model"
alias rgc="rails g controller"

# For Angular
alias ngghd="ng github-pages:deploy"

# For blog
alias new-blog="sh jekyll_new_post.sh"
